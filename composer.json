{
    "name": "getherbie/start-website",
    "homepage": "http://www.getherbie.org",
    "description": "The website starter",
    "type": "project",
    "license":"BSD-3-Clause",
    "minimum-stability": "dev",
    "require": {
        "getherbie/herbie": "dev-php-7",
        "getherbie/plugin-simplecontact": "dev-master",
        "getherbie/plugin-simplesearch": "dev-master"
    },    
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "Herbie\\Composer\\Installer::setPermission"
        ]
    },
    "extra": {
        "writable": [
            "site/cache/data",
            "site/cache/page",
            "site/cache/twig"
        ],
        "executable": []
    },
    "autoload-dev": {
        "psr-4": {
            "Herbie\\": "../herbie/src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/getherbie-plugin/simplecontact"
        },        
        {
            "type": "vcs",
            "url": "https://github.com/getherbie-plugin/simplesearch"
        },        
        {
            "type": "vcs",
            "url": "https://github.com/getherbie-plugin/markdown"
        },
        {
            "type": "vcs",
            "url": "https://github.com/getherbie-plugin/shortcode"
        },
        {
            "type": "vcs",
            "url": "https://github.com/getherbie-plugin/textile"
        },
        {
            "type": "vcs",
            "url": "https://github.com/getherbie-plugin/twig"
        }
    ]         
}
